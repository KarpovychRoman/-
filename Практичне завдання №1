#include <stdio.h>
#include <windows.h>

int main() {
    SetConsoleCP(1251); //
    SetConsoleOutputCP(1251); //Ці дві команди дозволяють бачити нормальні літери в консолі
    int t1, t2, t3; //Три змінні, які містять час, необхідний для кожного гостя, щоб з'їсти пиріг
    printf("Введіть три значення: "); //Виведедення повідомлення
    scanf("%d %d %d", &t1, &t2, &t3); //Зчитування трьох натуральних числел зі стандартного вводу і присвоювання їх значення змінним t1, t2 та t3

    double total_time = 1.0 / t1 + 1.0 / t2 + 1.0 / t3; //Обчислення загального часу за який гості разом можуть з'їсти пиріг
    double time_to_eat = 1.0 / total_time; //Збереження результату

    printf("Час, необхідний для з'їдання пирога: %.2f годин\n", time_to_eat); //Виведення результату

    return 0;
}
